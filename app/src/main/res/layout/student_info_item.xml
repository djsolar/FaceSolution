<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:contentPadding="8dp"
    android:background="@mipmap/photo_icon">
    
    <ImageView
        android:id="@+id/student_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/icon"/>
    
    <ImageView
        android:id="@+id/student_status"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_gravity="top|end"
        android:src="@mipmap/later_icon_tag"/>

    <TextView
        android:id="@+id/student_name"
        android:layout_gravity="bottom"
        android:textSize="24px"
        android:gravity="center"
        android:textColor="@color/student_name_color"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="司行沛"
        android:background="@drawable/student_name_bg"/>

</android.support.v7.widget.CardView>